<% content_for :title, "Sign In - GrapesJS Page Builder" %>

<div class="min-h-screen flex items-center justify-center bg-slate-900">
  <div class="bg-slate-800 p-8 rounded-lg shadow-xl w-full max-w-md">
    <h1 class="text-2xl font-bold text-white mb-6 text-center">Sign In</h1>

    <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <label for="email" class="block text-sm font-medium text-slate-300 mb-1">Email</label>
        <%= email_field_tag :email, params[:email],
            class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "you@example.com",
            required: true,
            autofocus: true %>
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-slate-300 mb-1">Password</label>
        <%= password_field_tag :password, nil,
            class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "••••••••",
            required: true %>
      </div>

      <div>
        <%= submit_tag "Sign In",
            class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-slate-400">
      Don't have an account?
      <%= link_to "Sign Up", signup_path, class: "text-blue-400 hover:text-blue-300" %>
    </p>
  </div>
</div>
