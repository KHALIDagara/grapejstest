<% content_for :title, "Sign Up - GrapesJS Page Builder" %>

<div class="min-h-screen flex items-center justify-center bg-slate-900">
  <div class="bg-slate-800 p-8 rounded-lg shadow-xl w-full max-w-md">
    <h1 class="text-2xl font-bold text-white mb-6 text-center">Create Account</h1>

    <% if @user.errors.any? %>
      <div class="bg-red-900/50 border border-red-600 text-red-300 px-4 py-3 rounded-lg mb-4">
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, url: signup_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <label for="user_email" class="block text-sm font-medium text-slate-300 mb-1">Email</label>
        <%= f.email_field :email,
            class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "you@example.com",
            required: true,
            autofocus: true %>
      </div>

      <div>
        <label for="user_password" class="block text-sm font-medium text-slate-300 mb-1">Password</label>
        <%= f.password_field :password,
            class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "••••••••",
            required: true %>
        <p class="text-xs text-slate-500 mt-1">Minimum 6 characters</p>
      </div>

      <div>
        <label for="user_password_confirmation" class="block text-sm font-medium text-slate-300 mb-1">Confirm Password</label>
        <%= f.password_field :password_confirmation,
            class: "w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "••••••••",
            required: true %>
      </div>

      <div>
        <%= f.submit "Create Account",
            class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>

    <p class="mt-6 text-center text-slate-400">
      Already have an account?
      <%= link_to "Sign In", login_path, class: "text-blue-400 hover:text-blue-300" %>
    </p>
  </div>
</div>
